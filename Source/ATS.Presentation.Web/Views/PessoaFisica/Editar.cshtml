@model ATS.Cadastro.Application.ViewModels.PessoaFisica.EditarPessoaFisicaViewModel

@{
    ViewBag.Title = "Editar";
    ViewBag.Pagina = "PessoaFisica";
}

<div class="nomePagina" pagina="@ViewBag.Pagina"></div>

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Editar
        <small>Pessoa Física</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="@Url.Action("Index", "PessoaFisica")">Pessoa Física</a></li>
        <li class="active">Editar</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-7">
            <!-- box -->
            <div class="box box-warning">
                @using (Html.BeginForm("Editar", "PessoaFisica", FormMethod.Post, new { @id = "formPessoaFisicaEditar", role = "form", @autocomplete = "off" }))
                {
                    <div class="box-header with-border">
                        <h3 class="box-title">Dados Gerais</h3>
                    </div>

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(m => m.DadosDaPessoaFisica.IdPessoa)

                    <!-- /.box-header -->
                    <div class="box-body">
                        <!-- text input -->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label">Nome: *</label>
                                    @Html.TextBoxFor(m => m.DadosDaPessoaFisica.Nome, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.DadosDaPessoaFisica.Nome, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label col-md-12">Sexo: *</label>
                                    <!-- radio -->
                                    <div class="form-group col-md-6">
                                        <div class="radio">
                                            <label>
                                                @Html.RadioButtonFor(m => m.DadosDaPessoaFisica.Sexo, 1, new { @checked = true })Masculino
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <div class="radio">
                                            <label>
                                                @Html.RadioButtonFor(m => m.DadosDaPessoaFisica.Sexo, 2)Feminino
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Data de Nascimento: *</label>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        @Html.EditorFor(m => m.DadosDaPessoaFisica.DataDeNascimento, new { htmlAttributes = new { @class = "form-control pull-right datepicker" } })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.DadosDaPessoaFisica.DataDeNascimento, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Estado Civil: *</label>
                                    @Html.DropDownListFor(m => m.DadosDaPessoaFisica.EstadoCivil, Model.EstadoCivilList, new { @class = "form-control selectpickerOneOption", @size = "2" })
                                    @Html.ValidationMessageFor(m => m.DadosDaPessoaFisica.EstadoCivil, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Título de Eleitor:</label>
                                    @Html.TextBoxFor(m => m.DadosDaPessoaFisica.TituloDeEleitor, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">CPF: *</label>
                                    @Html.TextBoxFor(m => m.DadosDaPessoaFisica.CPF, new { @class = "form-control cpf" })
                                    @Html.ValidationMessageFor(m => m.DadosDaPessoaFisica.CPF, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">RG:</label>
                                    @Html.TextBoxFor(m => m.DadosDaPessoaFisica.RG, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Naturalidade: *</label>
                                    @Html.DropDownListFor(m => m.DadosDaPessoaFisica.NaturalidadeId, Model.EstadoList, new { @class = "form-control selectpickerOneOption", @size = "2" })
                                    @Html.ValidationMessageFor(m => m.DadosDaPessoaFisica.NaturalidadeId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Nacionalidade:</label>
                                    @Html.TextBoxFor(m => m.DadosDaPessoaFisica.Nacionalidade, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Nome do Pai:</label>
                                    @Html.TextBoxFor(m => m.DadosDaPessoaFisica.NomeDoPai, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Nome da Mãe:</label>
                                    @Html.TextBoxFor(m => m.DadosDaPessoaFisica.NomeDaMae, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Limite de credito:</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">R$</span>
                                        @Html.TextBoxFor(m => m.DadosDaPessoaFisica.LimiteDeCredito, new { @class = "form-control dinheiro" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Salário:</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">R$</span>
                                        @Html.TextBoxFor(m => m.DadosDaPessoaFisica.Salario, new { @class = "form-control dinheiro" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">SPC:</label>
                                    @Html.TextBoxFor(m => m.DadosDaPessoaFisica.SPC, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">Data de última compra:</label>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        @Html.EditorFor(m => m.DadosDaPessoaFisica.DataDaUltimaCompra, new { htmlAttributes = new { @class = "form-control pull-right datepicker" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- textarea -->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label">Observação:</label>
                                    @Html.TextAreaFor(m => m.DadosDaPessoaFisica.Observacao, 5, 12, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label">Referências:</label>
                                    @Html.TextAreaFor(m => m.DadosDaPessoaFisica.Referencias, 5, 12, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <div class="pull-right">
                            <a href="@Url.Action("Index", "PessoaFisica")" class="btn btn-default btn-lg">
                                Voltar
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fa fa-save"></i>&nbsp;
                                Salvar
                            </button>
                        </div>
                    </div>
                }
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (right) -->

        <div class="col-md-5">
            <!-- box -->
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#meios" data-toggle="tab">Meios de Comunicação</a></li>
                    <li><a href="#endereco" data-toggle="tab">Endereço</a></li>
                </ul>
                <div class="tab-content">
                    <div class="active tab-pane" id="meios">
                        <div class="box-body">
                            <!-- text input -->
                            <div class="row">
                                <div class="col-xs-12">
                                    <table id="tbMeios" class="table table-striped table-hover datatable">
                                        <thead>
                                            <tr>
                                                <th>Descrição</th>
                                                <th>Tipo</th>
                                                <th>#</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.ListaDeMeioDeComunicacao != null && Model.ListaDeMeioDeComunicacao.Any())
                                            {
                                                foreach (var meio in Model.ListaDeMeioDeComunicacao)
                                                {
                                                    <tr>
                                                        @{ var descricaoTipo = meio.TipoDeMeioDeComunicacao.Descricao; }
                                                        <td>
                                                            @if (descricaoTipo.Equals("TELEFONE") || descricaoTipo.Equals("CELULAR"))
                                                            {
                                                                <span class="telefone">@meio.Valor</span>
                                                            }
                                                            else if (descricaoTipo.Equals("SITE") || descricaoTipo.Equals("REDE SOCIAL"))
                                                            {
                                                                <a href="@meio.Valor" target="_blank">@meio.Valor</a>
                                                            }
                                                        </td>
                                                        <td>@descricaoTipo</td>
                                                        <td style="width: 60px; text-align: center">
                                                            <a href="javascript:void(0)" class="btn btn-danger btn-sm btnExcluir" tabela="meio" tabindex="0" data-toggle="tooltip" title="Excluir" id="@meio.IdMeioDeComunicacao">
                                                                <i class="fa fa-trash"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    }
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td>-</td>
                                                        <td>-</td>
                                                        <td>-</td>
                                                    </tr>
                                                }
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.col -->
                            </div>
                        </div>
                        <div class="box-footer">
                            <div class="pull-right">
                                <a href="javascript:void(0)" class="btn btn-primary" data-toggle="modal" data-target="#meioModal">
                                    <i class="fa fa-plus"></i> &nbsp; Cadastrar Novo
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="endereco">
                        <div class="box-body">
                            <table id="tbEnderecos" class="table table-striped table-hover datatable">
                                <thead>
                                    <tr>
                                        <th>Endereço</th>
                                        <th>Cidade</th>
                                        <th>Estado</th>
                                        <th>#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.ListaDeEnderecos != null && Model.ListaDeEnderecos.Any())
                                    {
                                        foreach (var endereco in Model.ListaDeEnderecos)
                                        {
                                            <tr>
                                                <td>
                                                    @{ var local = endereco.Logradouro + ", " + endereco.Numero + " - " + endereco.Complemento + " - " + endereco.Bairro;}
                                                    @local - <span class='cep'>@endereco.Cep</span>
                                                </td>
                                                <td>@endereco.Cidade.Nome</td>
                                                <td>@endereco.Estado.Nome</td>
                                                <td style="width: 60px; text-align: center">
                                                    <a href="javascript:void(0);" class="btn btn-danger btn-sm btnExcluir" tabela="endereco" tabindex="0" data-toggle="tooltip" title="Excluir" id="@endereco.IdEndereco">
                                                        <i class="fa fa-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td>-</td>
                                            <td>-</td>
                                            <td>-</td>
                                            <td>-</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="box-footer">
                            <div class="pull-right">
                                <a href="javascript:void(0);" class="btn btn-primary" data-toggle="modal" data-target="#enderecoModal">
                                    <i class="fa fa-plus"></i> &nbsp; Cadastrar Endereço
                                </a>
                            </div>
                        </div>
                    </div>
                    <!-- /.tab-pane -->
                </div>
                <!-- /.tab-content -->
            </div>
            <!-- /.nav-tabs-custom -->
        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
</section>

@{ Html.RenderPartial("Partial/_EnderecoModal"); }
@{ Html.RenderPartial("Partial/_MeioModal"); }
@{ Html.RenderPartial("~/Views/Shared/_PopoverDeExclusao.cshtml"); }

<!-- /.content -->

@section Styles
{
    <!-- DatePicker -->
    <link href="~/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" />

    <!-- Jquery MultiSelect -->
    <link href="~/Content/plugins/bootstrap-multiselect/css/bootstrap-multiselect.css" rel="stylesheet" />

    <!-- DataTables -->
    <link href="~/Content/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" />
}

@section Scripts
{
    @Scripts.Render("~/bundles/dataPicker")

    <!-- Jquery Mask -->
    <script type="text/javascript" src="~/Content/plugins/jquery-mask/jquery.mask.min.js"></script>

    <!-- Jquery MultiSelect -->
    <script type="text/javascript" src="~/Content/plugins/bootstrap-multiselect/js/bootstrap-multiselect.js"></script>

    <!-- DataTables -->
    <script type="text/javascript" src="~/Content/plugins/datatables/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Content/plugins/datatables/dataTables.bootstrap.min.js"></script>

    <!-- Custom -->
    <script type="text/javascript" src="~/Content/custom/js/mascaraCustom.js"></script>
    <script type="text/javascript" src="~/Content/custom/js/multiSelectCustom.js"></script>
    <script type="text/javascript" src="~/Content/custom/js/dataPickerCustom.js"></script>
    
    <script type="text/javascript" src="~/Content/custom/js/pessoaFisicaEdicao.js"></script>
}

